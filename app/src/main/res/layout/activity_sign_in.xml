<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_primary_gradient">
        <View
            android:id="@+id/viewCenterVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:contentDescription="@null"
            android:src="@drawable/logo_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/msg_welcome_login"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoApp" />

        <ImageView
            android:id="@+id/imgCustomer"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:contentDescription="@null"
            android:src="@drawable/img_customer_review"
            app:layout_constraintEnd_toStartOf="@id/viewCenterVertical"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <View
            android:id="@+id/viewSupportedImgCustomer"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/imgCustomer"
            app:layout_constraintEnd_toEndOf="@id/imgCustomer"
            app:layout_constraintStart_toStartOf="@id/imgCustomer"
            app:layout_constraintTop_toTopOf="@id/imgCustomer" />

        <ImageView
            android:id="@+id/imgRating"
            android:layout_width="@dimen/_94sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:contentDescription="@null"
            android:src="@drawable/img_rating_demo"
            app:layout_constraintBottom_toTopOf="@id/viewSupportedImgCustomer"
            app:layout_constraintStart_toEndOf="@id/viewCenterVertical"
            app:layout_constraintTop_toTopOf="@id/imgCustomer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/msg_count_reviews"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@id/imgCustomer"
            app:layout_constraintStart_toStartOf="@id/imgRating"
            app:layout_constraintTop_toBottomOf="@id/viewSupportedImgCustomer" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_white_10_border_4sdp"
            android:fontFamily="@font/inter_regular"
            android:hint="username@gmail.com"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="#232323"
            android:textColorHint="#666666"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@id/imgCustomer"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_white_10_border_4sdp"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/enter_your_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="#232323"
            android:textColorHint="#666666"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@id/edtEmail" />

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="@id/edtEmail"
            app:layout_constraintTop_toBottomOf="@id/edtPassword" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="@id/tvForgotPassword"
            app:layout_constraintStart_toStartOf="@id/tvForgotPassword"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

        <TextView
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/bg_transparent_border_white_4sdp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

        <TextView
            android:id="@+id/tvOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/or_login_with"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSignIn" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvOr"
            app:layout_constraintEnd_toStartOf="@id/tvOr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvOr" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tvOr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvOr"
            app:layout_constraintTop_toTopOf="@id/tvOr" />

        <ImageView
            android:id="@+id/imgLoginFb"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/img_fb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOr" />

        <ImageView
            android:id="@+id/imgLoginIg"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/img_ig"
            app:layout_constraintBottom_toBottomOf="@id/imgLoginFb"
            app:layout_constraintEnd_toStartOf="@id/imgLoginFb"
            app:layout_constraintTop_toTopOf="@id/imgLoginFb" />

        <ImageView
            android:id="@+id/imgLoginTele"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/img_tele"
            app:layout_constraintBottom_toBottomOf="@id/imgLoginFb"
            app:layout_constraintStart_toEndOf="@id/imgLoginFb"
            app:layout_constraintTop_toTopOf="@id/imgLoginFb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_14sdp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/you_don_t_have_an_account"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>